article.definition class="#{definition.dangerous? ? 'dangerous' : 'safe'}"
  header
    h1
      -if current_user.admin?
        = link_to definition.name, edit_definition_path(definition)
      - else
        = definition.name


  p
    i.icon-save
    span.executable= definition.executable
    - unless definition.tags.nil? || definition.tags.blank?
      span.tags
        i.icon-tags
        - definition.tags.each do |tag|
          = render 'tags/tag', tag: tag
